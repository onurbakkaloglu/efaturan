@model eFaturanMVC.Models.Email

@{
    ViewBag.Title = "Index";
}

<section id="contact" class="contact">
    <div class="container">

        <div class="section-title" data-aos="zoom-out">
            <h2>Daha Fazla BİLGİ İÇİN</h2>
            <p>SİZİ ARAYALIM</p>
        </div>

        <div class="row mt-5">

            <div class="col-lg-4" data-aos="fade-right">
                <div class="info" id="telefonlogo">


                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Telefon Numaranız:</h4>

                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">

                <form id="form1" method="post" role="form" class="php-email-form">

                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="Telefon" id="Telefon" placeholder="Telefon Numaranız" required>
                    </div>



                </form>

            </div>

        </div>

        <div class="row mt-5">

            <div class="col-lg-4" data-aos="fade-right">
                <div class="info" id="emaillogo">


                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email Adresiniz:</h4>

                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">

                <form method="post" role="form" class="php-email-form" id="form2">

                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="Mail" id="Mail" placeholder="E-Mail" required>
                    </div>


                </form>
                <form>
                    <button type="button" class="btn btn-success">Gönder</button>
                </form>
            </div>

        </div>
       
        <iframe id="map"src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3015.6607539622664!2d31.170095215410804!3d40.90125597931179!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x409d7558c6d29949%3A0x332d4e256b968190!2sBilsoft!5e0!3m2!1str!2str!4v1621845589546!5m2!1str!2str" frameborder="0" allowfullscreen></iframe>
    
    </div>
</section><!-- End Contact Section -->

@section MailScript{
    <script>
        $("form button.btn").on("click", function () {

            let mail = {
                "Telefon": $("input#Telefon").val(),
                "Mail": $("input#Mail").val(),
                "Konu": $("input#Konu").val(),
                "Mesaj": $("textarea#Mesaj").val(),
            };

            toastr.success("Başarıyla mail gönderdiniz.")
            $.ajax({
                url: "@Url.Action("Index","efatura")",
                type: "post",
                dataType: "JSON",
                data: mail,
                success: function (res) {
                    console.log(res)
                    if (res.IsSuccess) {

                    } else { }
                    for (var i = 0; i < 5; i++) {
                        $("form")[i].reset()
                    }

                },
                error: function () {

                }
            });

            return false;
        })
    </script>
}