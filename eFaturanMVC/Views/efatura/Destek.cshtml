
@{
    ViewBag.Title = "Destek";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact" class="contact">
    <div class="container" id="destek">

        <div class="section-title" data-aos="zoom-out">
            <h2>Destek</h2>
            <p>Destek</p>
        </div>

        <div class="row mt-5">

            <div class="col-lg-4" data-aos="fade-right">
                <div class="info" id="emaillogo">

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <a href="mailto:bilgi@efaturan.com"><p>bilgi@efaturan.com</p></a>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Telefon:</h4>
                        <a href="tel:+908506110659"><p>0850 611 06 59</p></a>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">

                <form action="forms/contact.php" method="post" role="form" class="php-email-form" id="form2">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="Telefon" class="form-control" id="Telefon" placeholder="Telefon numaranızı giriniz" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" name="Mail" id="Mail" placeholder="E-Mailinizi giriniz" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="Konu" id="Konu" placeholder="Konu" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" name="Mesaj" id="Mesaj" rows="5" placeholder="Mesaj" required></textarea>
                    </div>

                    <div class="text-center"><button type="button" class="btn btn-success">Mail Gönder</button></div>
                </form>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
@section MailScript{
    <script>
        $("form button.btn").on("click", function () {

            let mail = {
                "Telefon": $("input#Telefon").val(),
                "Mail": $("input#Mail").val(),
                "Konu": $("input#Konu").val(),
                "Mesaj": $("textarea#Mesaj").val(),
            };

            toastr.success("Başarıyla mail gönderdiniz.")
            $.ajax({
                url: "@Url.Action("Index","efatura")",
                type: "post",
                dataType: "JSON",
                data: mail,
                success: function (res) {
                    console.log(res)
                    if (res.IsSuccess) {

                    } else { }
                    for (var i = 0; i < 5; i++) {
                        $("form")[i].reset()
                    }

                },
                error: function () {

                }
            });

            return false;
        })
    </script>
}